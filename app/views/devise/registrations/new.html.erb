<header class="auth">
  <div class="menu-title-search">
    <i class="fas fa-arrow-left"></i>
    <div class="header-title">
      <h1>REGISTER</h1>
    </div>
    <div class="login-actions">
      <%= link_to "Next", class: 'signup-btn-text' %>
    </div>
  </div>
</header>
<main class="auth">
  <div class="signup-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-container-form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :name, class: "login-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name here", class: 'signup-input name' %>
    </div>
  
    <div class="field">
      <%= f.label :email, class: "signup-label" %>
      <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "Email here", class: 'signup-input email' %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "signup-label" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password here", class: 'signup-input password' %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, class: "signup-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: 'signup-input password' %>
    </div>
  <% end %>
  
  </div>
</main>
